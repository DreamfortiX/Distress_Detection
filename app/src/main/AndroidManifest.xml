<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmotionDetection"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.example.myapplication.Setting_Activity"
            android:exported="false"
            tools:ignore="MissingClass" />
        <activity
            android:name="com.example.LoginActivity"
            android:exported="false"
            tools:ignore="MissingClass" />
        <activity
            android:name="com.example.SignupActivity"
            android:exported="false"
            tools:ignore="MissingClass" />


        <activity
            android:name="com.example.History_Activity"
            android:exported="false" />
        <activity
            android:name="com.example.ViewHistory"
            android:exported="false" />
        <activity
            android:name="com.example.Results"
            android:exported="false" />
        <activity
            android:name="com.example.Processing_Activity"
            android:exported="false" />
        <activity
            android:name="com.example.emotiondetection.Record_Video"
            android:exported="false" />
        <activity
            android:name="com.example.Splash_Screen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.emotiondetection.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.example.SubscriptionActivity"
            android:exported="false" />
        <activity
            android:name="com.example.NotificationsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.HelpActivity"
            android:exported="false" />
        <activity
            android:name="com.example.AnalysisDetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.TutorialsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.StatisticsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ProfileActivity"
            android:exported="false" />
    </application>

</manifest>