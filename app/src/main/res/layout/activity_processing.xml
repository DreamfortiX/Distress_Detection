<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Background Pattern -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_pattern"
        android:alpha="0.1"
        android:scaleType="centerCrop"/>

    <!-- Processing Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/processingAnimation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/processingTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_rawRes="@raw/processing_animation" />

    <!-- Processing Title -->
    <TextView
        android:id="@+id/processingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analyzing Emotions"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/processingSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processingAnimation" />

    <!-- Processing Subtitle -->
    <TextView
        android:id="@+id/processingSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extracting features from your video..."
        android:textSize="16sp"
        android:textColor="@color/secondary_light"
        app:layout_constraintBottom_toTopOf="@+id/progressContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processingTitle" />

    <!-- Progress Container -->
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processingSubtitle">

        <!-- Step 1: Audio Processing -->
        <LinearLayout
            android:id="@+id/stepAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/audioIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_audio"
                android:tint="@color/secondary"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Extracting Audio Features"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <ProgressBar
                android:id="@+id/audioProgress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/audioCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                android:tint="@color/success"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Step 2: Video Processing -->
        <LinearLayout
            android:id="@+id/stepVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/videoIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_video"
                android:tint="@color/secondary"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Analyzing Head Pose"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <ProgressBar
                android:id="@+id/videoProgress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/videoCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                android:tint="@color/success"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Step 3: Image Processing -->
        <LinearLayout
            android:id="@+id/stepImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_face"
                android:tint="@color/secondary"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Extracting Facial Features"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <ProgressBar
                android:id="@+id/imageProgress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/imageCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                android:tint="@color/success"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Step 4: Model Inference -->
        <LinearLayout
            android:id="@+id/stepModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/modelIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_brain"
                android:tint="@color/secondary"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Running AI Model"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <ProgressBar
                android:id="@+id/modelProgress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:id="@+id/modelCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                android:tint="@color/success"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Overall Progress -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/overallProgress"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_margin="24dp"
        app:indicatorColor="@color/secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>